<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatfirebase">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.chat.ConversaContato"></activity>
        <activity android:name=".ui.contato.DetalhesContato" />
        <activity android:name=".ui.contato.AdicionarContato" />
        <activity android:name=".ui.usuario.Cadastro" />
        <activity android:name=".ui.usuario.Login" />
        <activity android:name=".ui.usuario.Principal" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>